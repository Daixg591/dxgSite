<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.shahenpc.system.mapper.standard.StandardCensorRecordMapper">
    
    <resultMap type="StandardCensorRecord" id="StandardCensorRecordResult">
        <result property="recordId"    column="record_id"    />
        <result property="censorId"    column="censor_id"    />
        <result property="procinsId"    column="procIns_id"    />
        <result property="deployId"    column="deploy_id"    />
        <result property="status"    column="status"    />
        <result property="remark"    column="remark"    />
        <result property="createBy"    column="create_by"    />
        <result property="createTime"    column="create_time"    />
        <result property="updateBy"    column="update_by"    />
        <result property="sendUserId"    column="send_user_id"    />
        <result property="receiveUserId"    column="receive_user_id"    />
        <result property="content"    column="content"    />
    </resultMap>

    <sql id="selectStandardCensorRecordVo">
        select record_id, censor_id, procIns_id, deploy_id, status, remark, create_by, create_time, update_by, send_user_id, receive_user_id, content from standard_censor_record
    </sql>

    <select id="selectStandardCensorRecordList" parameterType="StandardCensorRecord" resultMap="StandardCensorRecordResult">
        <include refid="selectStandardCensorRecordVo"/>
        <where>  
            <if test="censorId != null "> and censor_id = #{censorId}</if>
            <if test="procinsId != null  and procinsId != ''"> and procIns_id = #{procinsId}</if>
            <if test="deployId != null  and deployId != ''"> and deploy_id = #{deployId}</if>
            <if test="status != null "> and status = #{status}</if>
            <if test="sendUserId != null "> and send_user_id = #{sendUserId}</if>
            <if test="receiveUserId != null "> and receive_user_id = #{receiveUserId}</if>
            <if test="content != null  and content != ''"> and content = #{content}</if>
        </where>
    </select>
    
    <select id="selectStandardCensorRecordByRecordId" parameterType="Long" resultMap="StandardCensorRecordResult">
        <include refid="selectStandardCensorRecordVo"/>
        where record_id = #{recordId}
    </select>
        
    <insert id="insertStandardCensorRecord" parameterType="StandardCensorRecord">
        insert into standard_censor_record
        <trim prefix="(" suffix=")" suffixOverrides=",">
            <if test="recordId != null">record_id,</if>
            <if test="censorId != null">censor_id,</if>
            <if test="procinsId != null">procIns_id,</if>
            <if test="deployId != null">deploy_id,</if>
            <if test="status != null">status,</if>
            <if test="remark != null">remark,</if>
            <if test="createBy != null">create_by,</if>
            <if test="createTime != null">create_time,</if>
            <if test="updateBy != null">update_by,</if>
            <if test="sendUserId != null">send_user_id,</if>
            <if test="receiveUserId != null">receive_user_id,</if>
            <if test="content != null">content,</if>
         </trim>
        <trim prefix="values (" suffix=")" suffixOverrides=",">
            <if test="recordId != null">#{recordId},</if>
            <if test="censorId != null">#{censorId},</if>
            <if test="procinsId != null">#{procinsId},</if>
            <if test="deployId != null">#{deployId},</if>
            <if test="status != null">#{status},</if>
            <if test="remark != null">#{remark},</if>
            <if test="createBy != null">#{createBy},</if>
            <if test="createTime != null">#{createTime},</if>
            <if test="updateBy != null">#{updateBy},</if>
            <if test="sendUserId != null">#{sendUserId},</if>
            <if test="receiveUserId != null">#{receiveUserId},</if>
            <if test="content != null">#{content},</if>
         </trim>
    </insert>

    <update id="updateStandardCensorRecord" parameterType="StandardCensorRecord">
        update standard_censor_record
        <trim prefix="SET" suffixOverrides=",">
            <if test="censorId != null">censor_id = #{censorId},</if>
            <if test="procinsId != null">procIns_id = #{procinsId},</if>
            <if test="deployId != null">deploy_id = #{deployId},</if>
            <if test="status != null">status = #{status},</if>
            <if test="remark != null">remark = #{remark},</if>
            <if test="createBy != null">create_by = #{createBy},</if>
            <if test="createTime != null">create_time = #{createTime},</if>
            <if test="updateBy != null">update_by = #{updateBy},</if>
            <if test="sendUserId != null">send_user_id = #{sendUserId},</if>
            <if test="receiveUserId != null">receive_user_id = #{receiveUserId},</if>
            <if test="content != null">content = #{content},</if>
        </trim>
        where record_id = #{recordId}
    </update>

    <delete id="deleteStandardCensorRecordByRecordId" parameterType="Long">
        delete from standard_censor_record where record_id = #{recordId}
    </delete>

    <delete id="deleteStandardCensorRecordByRecordIds" parameterType="String">
        delete from standard_censor_record where record_id in 
        <foreach item="recordId" collection="array" open="(" separator="," close=")">
            #{recordId}
        </foreach>
    </delete>
</mapper>