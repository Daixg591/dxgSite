<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.shahenpc.system.mapper.budget.BudgetMapper">
    
    <resultMap type="Budget" id="BudgetResult">
        <result property="budgetId"    column="budget_id"    />
        <result property="categoryId"    column="category_id"    />
        <result property="collectzhiType"    column="collectzhi_type"    />
        <result property="title"    column="title"    />
        <result property="amount"    column="amount"    />
        <result property="status"    column="status"    />
        <result property="remark"    column="remark"    />
        <result property="createTime"    column="create_time"    />
        <result property="updateBy"    column="update_by"    />
        <result property="updateTime"    column="update_time"    />
        <result property="createBy"    column="create_by"    />
    </resultMap>

    <sql id="selectBudgetVo">
        select budget_id, category_id, collectzhi_type, title, amount, status, remark, create_time, update_by, update_time, create_by from budget
    </sql>

    <select id="selectBudgetList" parameterType="Budget" resultMap="BudgetResult">
        <include refid="selectBudgetVo"/>
        <where>  
            <if test="categoryId != null "> and category_id = #{categoryId}</if>
            <if test="collectzhiType != null "> and collectzhi_type = #{collectzhiType}</if>
            <if test="title != null  and title != ''"> and title = #{title}</if>
            <if test="amount != null "> and amount = #{amount}</if>
            <if test="status != null "> and status = #{status}</if>
        </where>
    </select>
    
    <select id="selectBudgetByBudgetId" parameterType="Long" resultMap="BudgetResult">
        <include refid="selectBudgetVo"/>
        where budget_id = #{budgetId}
    </select>
        
    <insert id="insertBudget" parameterType="Budget">
        insert into budget
        <trim prefix="(" suffix=")" suffixOverrides=",">
            <if test="budgetId != null">budget_id,</if>
            <if test="categoryId != null">category_id,</if>
            <if test="collectzhiType != null">collectzhi_type,</if>
            <if test="title != null">title,</if>
            <if test="amount != null">amount,</if>
            <if test="status != null">status,</if>
            <if test="remark != null">remark,</if>
            <if test="createTime != null">create_time,</if>
            <if test="updateBy != null">update_by,</if>
            <if test="updateTime != null">update_time,</if>
            <if test="createBy != null">create_by,</if>
         </trim>
        <trim prefix="values (" suffix=")" suffixOverrides=",">
            <if test="budgetId != null">#{budgetId},</if>
            <if test="categoryId != null">#{categoryId},</if>
            <if test="collectzhiType != null">#{collectzhiType},</if>
            <if test="title != null">#{title},</if>
            <if test="amount != null">#{amount},</if>
            <if test="status != null">#{status},</if>
            <if test="remark != null">#{remark},</if>
            <if test="createTime != null">#{createTime},</if>
            <if test="updateBy != null">#{updateBy},</if>
            <if test="updateTime != null">#{updateTime},</if>
            <if test="createBy != null">#{createBy},</if>
         </trim>
    </insert>

    <update id="updateBudget" parameterType="Budget">
        update budget
        <trim prefix="SET" suffixOverrides=",">
            <if test="categoryId != null">category_id = #{categoryId},</if>
            <if test="collectzhiType != null">collectzhi_type = #{collectzhiType},</if>
            <if test="title != null">title = #{title},</if>
            <if test="amount != null">amount = #{amount},</if>
            <if test="status != null">status = #{status},</if>
            <if test="remark != null">remark = #{remark},</if>
            <if test="createTime != null">create_time = #{createTime},</if>
            <if test="updateBy != null">update_by = #{updateBy},</if>
            <if test="updateTime != null">update_time = #{updateTime},</if>
            <if test="createBy != null">create_by = #{createBy},</if>
        </trim>
        where budget_id = #{budgetId}
    </update>

    <delete id="deleteBudgetByBudgetId" parameterType="Long">
        delete from budget where budget_id = #{budgetId}
    </delete>

    <delete id="deleteBudgetByBudgetIds" parameterType="String">
        delete from budget where budget_id in 
        <foreach item="budgetId" collection="array" open="(" separator="," close=")">
            #{budgetId}
        </foreach>
    </delete>
</mapper>