<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.shahenpc.system.mapper.represent.RepresentActivityGroupMapper">
    
    <resultMap type="RepresentActivityGroup" id="RepresentActivityGroupResult">
        <result property="activityGroupId"    column="activity_group_id"    />
        <result property="activityId"    column="activity_id"    />
        <result property="groupName"    column="group_name"    />
        <result property="remark"    column="remark"    />
        <result property="createBy"    column="create_by"    />
        <result property="createTime"    column="create_time"    />
        <result property="updateBy"    column="update_by"    />
        <result property="updateTime"    column="update_time"    />
    </resultMap>

    <sql id="selectRepresentActivityGroupVo">
        select activity_group_id, activity_id, group_name, remark, create_by, create_time, update_by, update_time from represent_activity_group
    </sql>

    <select id="selectRepresentActivityGroupList" parameterType="RepresentActivityGroup" resultMap="RepresentActivityGroupResult">
        <include refid="selectRepresentActivityGroupVo"/>
        <where>  
            <if test="activityId != null "> and activity_id = #{activityId}</if>
            <if test="groupName != null  and groupName != ''"> and group_name like concat('%', #{groupName}, '%')</if>
        </where>
    </select>
    
    <select id="selectRepresentActivityGroupByActivityGroupId" parameterType="Long" resultMap="RepresentActivityGroupResult">
        <include refid="selectRepresentActivityGroupVo"/>
        where activity_group_id = #{activityGroupId}
    </select>
        
    <insert id="insertRepresentActivityGroup" parameterType="RepresentActivityGroup" useGeneratedKeys = "true" keyProperty = "activityGroupId">
        insert into represent_activity_group
        <trim prefix="(" suffix=")" suffixOverrides=",">
            <if test="activityGroupId != null">activity_group_id,</if>
            <if test="activityId != null">activity_id,</if>
            <if test="groupName != null">group_name,</if>
            <if test="remark != null">remark,</if>
            <if test="createBy != null">create_by,</if>
            <if test="createTime != null">create_time,</if>
            <if test="updateBy != null">update_by,</if>
            <if test="updateTime != null">update_time,</if>
         </trim>
        <trim prefix="values (" suffix=")" suffixOverrides=",">
            <if test="activityGroupId != null">#{activityGroupId},</if>
            <if test="activityId != null">#{activityId},</if>
            <if test="groupName != null">#{groupName},</if>
            <if test="remark != null">#{remark},</if>
            <if test="createBy != null">#{createBy},</if>
            <if test="createTime != null">#{createTime},</if>
            <if test="updateBy != null">#{updateBy},</if>
            <if test="updateTime != null">#{updateTime},</if>
         </trim>
    </insert>

    <update id="updateRepresentActivityGroup" parameterType="RepresentActivityGroup">
        update represent_activity_group
        <trim prefix="SET" suffixOverrides=",">
            <if test="activityId != null">activity_id = #{activityId},</if>
            <if test="groupName != null">group_name = #{groupName},</if>
            <if test="remark != null">remark = #{remark},</if>
            <if test="createBy != null">create_by = #{createBy},</if>
            <if test="createTime != null">create_time = #{createTime},</if>
            <if test="updateBy != null">update_by = #{updateBy},</if>
            <if test="updateTime != null">update_time = #{updateTime},</if>
        </trim>
        where activity_group_id = #{activityGroupId}
    </update>

    <delete id="deleteRepresentActivityGroupByActivityGroupId" parameterType="Long">
        delete from represent_activity_group where activity_group_id = #{activityGroupId}
    </delete>

    <delete id="deleteByActivityId" parameterType="Long">
        delete
        from represent_activity_group
        where activity_id = #{activityId}
    </delete>


    <delete id="deleteRepresentActivityGroupByActivityGroupIds" parameterType="String">
        delete from represent_activity_group where activity_group_id in 
        <foreach item="activityGroupId" collection="array" open="(" separator="," close=")">
            #{activityGroupId}
        </foreach>
    </delete>
</mapper>