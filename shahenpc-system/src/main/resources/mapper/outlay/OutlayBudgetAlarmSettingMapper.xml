<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.shahenpc.system.mapper.outlay.OutlayBudgetAlarmSettingMapper">
    
    <resultMap type="OutlayBudgetAlarmSetting" id="OutlayBudgetAlarmSettingResult">
        <result property="alarmId"    column="alarm_id"    />
        <result property="budgetType"    column="budget_type"    />
        <result property="ratio"    column="ratio"    />
        <result property="remark"    column="remark"    />
        <result property="createBy"    column="create_by"    />
        <result property="createTime"    column="create_time"    />
        <result property="updateBy"    column="update_by"    />
        <result property="updateTime"    column="update_time"    />
    </resultMap>

    <sql id="selectOutlayBudgetAlarmSettingVo">
        select alarm_id, budget_type, ratio, remark, create_by, create_time, update_by, update_time from outlay_budget_alarm_setting
    </sql>

    <select id="selectOutlayBudgetAlarmSettingList" parameterType="OutlayBudgetAlarmSetting" resultMap="OutlayBudgetAlarmSettingResult">
        <include refid="selectOutlayBudgetAlarmSettingVo"/>
        <where>  
            <if test="budgetType != null "> and budget_type = #{budgetType}</if>
            <if test="ratio != null "> and ratio = #{ratio}</if>
        </where>
    </select>
    
    <select id="selectOutlayBudgetAlarmSettingByAlarmId" parameterType="Long" resultMap="OutlayBudgetAlarmSettingResult">
        <include refid="selectOutlayBudgetAlarmSettingVo"/>
        where alarm_id = #{alarmId}
    </select>
        
    <insert id="insertOutlayBudgetAlarmSetting" parameterType="OutlayBudgetAlarmSetting" useGeneratedKeys="true" keyProperty="alarmId">
        insert into outlay_budget_alarm_setting
        <trim prefix="(" suffix=")" suffixOverrides=",">
            <if test="budgetType != null">budget_type,</if>
            <if test="ratio != null">ratio,</if>
            <if test="remark != null">remark,</if>
            <if test="createBy != null">create_by,</if>
            <if test="createTime != null">create_time,</if>
            <if test="updateBy != null">update_by,</if>
            <if test="updateTime != null">update_time,</if>
         </trim>
        <trim prefix="values (" suffix=")" suffixOverrides=",">
            <if test="budgetType != null">#{budgetType},</if>
            <if test="ratio != null">#{ratio},</if>
            <if test="remark != null">#{remark},</if>
            <if test="createBy != null">#{createBy},</if>
            <if test="createTime != null">#{createTime},</if>
            <if test="updateBy != null">#{updateBy},</if>
            <if test="updateTime != null">#{updateTime},</if>
         </trim>
    </insert>

    <update id="updateOutlayBudgetAlarmSetting" parameterType="OutlayBudgetAlarmSetting">
        update outlay_budget_alarm_setting
        <trim prefix="SET" suffixOverrides=",">
            <if test="budgetType != null">budget_type = #{budgetType},</if>
            <if test="ratio != null">ratio = #{ratio},</if>
            <if test="remark != null">remark = #{remark},</if>
            <if test="createBy != null">create_by = #{createBy},</if>
            <if test="createTime != null">create_time = #{createTime},</if>
            <if test="updateBy != null">update_by = #{updateBy},</if>
            <if test="updateTime != null">update_time = #{updateTime},</if>
        </trim>
        where alarm_id = #{alarmId}
    </update>

    <delete id="deleteOutlayBudgetAlarmSettingByAlarmId" parameterType="Long">
        delete from outlay_budget_alarm_setting where alarm_id = #{alarmId}
    </delete>

    <delete id="deleteOutlayBudgetAlarmSettingByAlarmIds" parameterType="String">
        delete from outlay_budget_alarm_setting where alarm_id in 
        <foreach item="alarmId" collection="array" open="(" separator="," close=")">
            #{alarmId}
        </foreach>
    </delete>
</mapper>