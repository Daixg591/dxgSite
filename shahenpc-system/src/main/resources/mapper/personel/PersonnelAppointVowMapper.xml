        <association property="sysUser" column="user_id" javaType="SysUser" resultMap="SysUserResult"></association>
    </resultMap>
    <resultMap type="PersonnelAppointVow" id="PersonnelAppointVowResult">
        <result property="vowId"    column="vow_id"    />
        <result property="userId"    column="user_id"    />
        <result property="fileIds"    column="file_ids"    />
        <result property="fileUrl"    column="file_url"    />
        <result property="coverUrl"    column="cover_Url"    />
