<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.shahenpc.system.mapper.perform.PerformInfoColumnMapper">
    
    <resultMap type="PerformInfoColumn" id="PerformInfoColumnResult">
        <result property="columnId"    column="column_id"    />
        <result property="parentId"    column="parent_id"    />
        <result property="columnName"    column="column_name"    />
        <result property="orderNum"    column="order_num"    />
        <result property="status"    column="status"    />
        <result property="level"    column="level"    />
        <result property="remark"    column="remark"    />
        <result property="createTime"    column="create_time"    />
        <result property="updateBy"    column="update_by"    />
        <result property="updateTime"    column="update_time"    />
        <result property="createBy"    column="create_by"    />
    </resultMap>

    <sql id="selectPerformInfoColumnVo">
        select column_id, parent_id, column_name, order_num, status, level, remark, create_time, update_by, update_time, create_by from perform_info_column
    </sql>

    <select id="selectPerformInfoColumnList" parameterType="PerformInfoColumn" resultMap="PerformInfoColumnResult">
        <include refid="selectPerformInfoColumnVo"/>
        <where>  
            <if test="parentId != null "> and parent_id = #{parentId}</if>
            <if test="columnName != null  and columnName != ''"> and column_name like concat('%', #{columnName}, '%')</if>
            <if test="orderNum != null "> and order_num = #{orderNum}</if>
            <if test="status != null  and status != ''"> and status = #{status}</if>
            <if test="level != null "> and level = #{level}</if>
        </where>
    </select>
    
    <select id="selectPerformInfoColumnByColumnId" parameterType="Long" resultMap="PerformInfoColumnResult">
        <include refid="selectPerformInfoColumnVo"/>
        where column_id = #{columnId}
    </select>
        
    <insert id="insertPerformInfoColumn" parameterType="PerformInfoColumn" useGeneratedKeys="true" keyProperty="columnId">
        insert into perform_info_column
        <trim prefix="(" suffix=")" suffixOverrides=",">
            <if test="parentId != null">parent_id,</if>
            <if test="columnName != null">column_name,</if>
            <if test="orderNum != null">order_num,</if>
            <if test="status != null">status,</if>
            <if test="level != null">level,</if>
            <if test="remark != null">remark,</if>
            <if test="createTime != null">create_time,</if>
            <if test="updateBy != null">update_by,</if>
            <if test="updateTime != null">update_time,</if>
            <if test="createBy != null">create_by,</if>
         </trim>
        <trim prefix="values (" suffix=")" suffixOverrides=",">
            <if test="parentId != null">#{parentId},</if>
            <if test="columnName != null">#{columnName},</if>
            <if test="orderNum != null">#{orderNum},</if>
            <if test="status != null">#{status},</if>
            <if test="level != null">#{level},</if>
            <if test="remark != null">#{remark},</if>
            <if test="createTime != null">#{createTime},</if>
            <if test="updateBy != null">#{updateBy},</if>
            <if test="updateTime != null">#{updateTime},</if>
            <if test="createBy != null">#{createBy},</if>
         </trim>
    </insert>

    <update id="updatePerformInfoColumn" parameterType="PerformInfoColumn">
        update perform_info_column
        <trim prefix="SET" suffixOverrides=",">
            <if test="parentId != null">parent_id = #{parentId},</if>
            <if test="columnName != null">column_name = #{columnName},</if>
            <if test="orderNum != null">order_num = #{orderNum},</if>
            <if test="status != null">status = #{status},</if>
            <if test="level != null">level = #{level},</if>
            <if test="remark != null">remark = #{remark},</if>
            <if test="createTime != null">create_time = #{createTime},</if>
            <if test="updateBy != null">update_by = #{updateBy},</if>
            <if test="updateTime != null">update_time = #{updateTime},</if>
            <if test="createBy != null">create_by = #{createBy},</if>
        </trim>
        where column_id = #{columnId}
    </update>

    <delete id="deletePerformInfoColumnByColumnId" parameterType="Long">
        delete from perform_info_column where column_id = #{columnId}
    </delete>

    <delete id="deletePerformInfoColumnByColumnIds" parameterType="String">
        delete from perform_info_column where column_id in 
        <foreach item="columnId" collection="array" open="(" separator="," close=")">
            #{columnId}
        </foreach>
    </delete>
</mapper>